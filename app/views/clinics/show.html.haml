%h1 Clinic
%h4 Clinic Information
%ul
  %li
    %strong Name:
    = @clinic.name
  %li
    %strong Address:
    = @clinic.address
  %li
    %strong City:
    = @clinic.city
  %li
    %strong State:
    = @clinic.state
  %li
    %strong Zip:
    = @clinic.zip
%p
  = link_to "Add Patient", new_clinic_patient_path(@clinic)
  %br/
  %br/
  %strong Patient List:
%ul
  - @patients.each do |patient|
    %br/
    %li
      %strong First name:
      = patient.first_name
    %li
      %strong Last name:
      = patient.last_name
    %li
      %strong Description:
      = patient.description
    %li
      %strong DOB:
      = patient.dob
    %li
      %strong Gender:
      = patient.gender
    %li
      %strong Blood Type:
      = patient.blood_type
    = link_to "View Patient Records", clinic_patient_path(@clinic, patient)
    |
    \#{link_to "Edit", edit_clinic_patient_path(@clinic, patient)}
    |
    \#{link_to "Delete", clinic_patient_path(@clinic, patient), method: :delete, data: {confirm: "Are you sure you want to delete record?"}}
    %br/
= link_to "Home", root_path
