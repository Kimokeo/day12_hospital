<h1>Clinic</h1>
<h4>Clinic Information</h4>
<ul>
<li><strong>Name:</strong> <%= @clinic.name %></li>
<li><strong>Address:</strong> <%= @clinic.address %></li>
<li><strong>City:</strong> <%= @clinic.city %></li>
<li><strong>State:</strong> <%= @clinic.state %></li>
<li><strong>Zip:</strong> <%= @clinic.zip %></li>
</ul>
<p>
  <%= link_to "Add Patient", new_clinic_patient_path(@clinic) %>
  <br>
  <br>
  <strong>Patient List:</strong>
  <ul>
    <% @patients.each do |patient| %>
      <br>
      <li><strong>First name:</strong> <%= patient.first_name %></li>
      <li><strong>Last name:</strong> <%= patient.last_name %></li>
      <li><strong>Description:</strong> <%= patient.description %></li>
      <li><strong>DOB:</strong> <%= patient.dob %></li>
      <li><strong>Gender:</strong> <%= patient.gender %></li>
      <li><strong>Blood Type:</strong> <%= patient.blood_type %></li>
      <%= link_to "View Patient Records", clinic_patient_path(@clinic, patient) %>
      |
      <%= link_to "Edit", edit_clinic_patient_path(@clinic, patient) %>
      |
      <%= link_to "Delete", clinic_patient_path(@clinic, patient), method: :delete, data: {confirm: "Are you sure you want to delete record?"} %>
      <br>
    <% end %>
  </ul>
</p>

<%= link_to "Home", root_path %>