<h1>Clinic</h1>
<h4>Clinic Information</h4>
<ul>
<li>Name: <%= @clinic.name %></li>
<li>Address: <%= @clinic.address %></li>
<li>City: <%= @clinic.city %></li>
<li>State: <%= @clinic.state %></li>
<li>Zip: <%= @clinic.zip %></li>
</ul>
<p>
  <%= link_to "Add Patient", new_clinic_patient_path(@clinic) %>
  <br>
  <br>
  <strong>Patient List:</strong>
  <ul>
    <% @patients.each do |patient| %>
      <br>
      <li>First name: <%= patient.first_name %></li>
      <li>Last name: <%= patient.last_name %></li>
      <li>Description: <%= patient.description %></li>
      <li>DOB: <%= patient.dob %></li>
      <li>Gender: <%= patient.gender %></li>
      <li>Blood Type: <%= patient.blood_type %></li>
      <%= link_to "View Patient Records", clinic_patient_path(@clinic, patient) %>
      |
      <%= link_to "Edit", edit_clinic_patient_path(@clinic, patient) %>
      |
      <%= link_to "Delete", clinic_patient_path(@clinic, patient), method: :delete, data: {confirm: "Are you sure you want to delete record?"} %>
      <br>
    <% end %>
  </ul>
</p>

<%= link_to "Home", root_path %>