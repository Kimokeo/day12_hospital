<h1>Hospital</h1>

<%= link_to "New Patient", new_patient_path %>
<br>
<ul>
<% @patients.each do |patient| %>
  <br>
  <%= link_to "Patient File", patient_path(patient) %>
  <li>Patient name: <%= patient.first_name %> <%= patient.last_name %></li>
  <br>
  <li>Patient DOB: <%= patient.dob %></li>
  <br>
  <li>Patient Issue: <%= patient.description %></li>
  <br>
  <li>Patient Gender: <%= patient.gender %></li>
  <br>
  <li>Patient Bloodtype: <%= patient.blood_type %></li>
  <br>
  <%= link_to "Edit", edit_patient_path(patient) %>
  <br>
  <%= link_to "Delete", patient_path(patient), method: :delete %>
  <br>
  <br>

<% end %>
</ul>

